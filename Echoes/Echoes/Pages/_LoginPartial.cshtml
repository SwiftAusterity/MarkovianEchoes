@using Microsoft.AspNetCore.Identity
@using Echoes.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="#" title="Who are you?" id="personaLabel" name="personaLabel">I Am</a>
            </li>
            <li>
                <input name="PersonaName" id="PersonaName" />
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="#" title="Who are you?" id="personaLabel" name="personaLabel">I Am</a>
        </li>
        <li>
            <input name="PersonaName" id="PersonaName" />
        </li>
        <li><a asp-page="/Account/Login" class="navLink" id="loginLink"><img src="~/images/hatch_lock.svg" title="Admin Login" /></a></li>
    </ul>
}