@model Echoes.Web.Models.ExistenceModel

@{
    ViewData["Title"] = "Purgatory";
    Layout = "~/Pages/_Layout.cshtml";
}

<div style="padding-top: 100px;">
    <span>You stand in purgatory. You might want to exist somewhere:</span>

    @if (Model.KnownPlaces.Count() == 0)
    {
        <p><a href="/existence/The Warren">The Warren</a></p>
    }
    else
    {
        foreach (var place in Model.KnownPlaces)
        {
            <p><a href="/existence/@place.Name">@place.Name</a></p>
        }
    }

</div>

@section Scripts {
    <script type="text/javascript">
        $('#existLink').addClass('selected');

        Tutorial($('a.navbar-brand'), 'Use the URI to change where you are.');
    </script>
}